@model KartMaster.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@* Mensagem de confirmação de remoção da reserva *@
<h3>Tem a certeza de que deseja excluir isto?</h3>
<div>
    <h4>Reserva</h4>
    <hr />
    @* Lista de detalhes da reserva a ser eliminada *@
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeReservante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeReservante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroPessoas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroPessoas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hora)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autodromo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autodromo.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Utilizador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Utilizador.Id)
        </dd>
    </dl>
    
    @* Formulário de confirmação para apagar a reserva *@
    <form asp-action="Delete">
        @* Campo oculto com o ID da reserva a apagar *@
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
