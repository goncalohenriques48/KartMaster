@model KartMaster.Models.Autodromo

@{
    // Define o título da página
    ViewData["Title"] = "Edit";
}

@* Título principal da página *@
<h1>Editar</h1>

@* Subtítulo com o nome da entidade a editar *@
<h4>Autódromo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Formulário para editar um autódromo existente *@
        <form asp-action="Edit">
            @* Mostra erros de validação gerais do modelo *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Campo oculto com o ID do autódromo (necessário para identificar o registo a editar) *@
            <input type="hidden" asp-for="Id" />

            @* Campo de edição do Nome *@
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            @* Campo de edição da Localização *@
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>

            @* Campo de edição do Telemóvel *@
            <div class="form-group">
                <label asp-for="Telemovel" class="control-label"></label>
                <input asp-for="Telemovel" class="form-control" />
                <span asp-validation-for="Telemovel" class="text-danger"></span>
            </div>

            @* Campo de edição do Email *@
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @* Campo de edição da Capacidade *@
            <div class="form-group">
                <label asp-for="Capacidade" class="control-label"></label>
                <input asp-for="Capacidade" class="form-control" />
                <span asp-validation-for="Capacidade" class="text-danger"></span>
            </div>

            @* Botão para submeter o formulário e guardar as alterações *@
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@* Link para voltar à listagem dos autódromos *@
<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@* Inclusão de scripts de validação do lado do cliente *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
