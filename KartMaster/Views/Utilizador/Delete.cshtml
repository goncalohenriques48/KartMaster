@model KartMaster.Models.Utilizador

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>
    Tem a certeza de que deseja excluir isto?
</h3>
<div>
    <h4>Utilizador</h4>
    <hr />
    @* Mostra os dados do utilizador a ser apagado *@
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    @* Formulário de confirmação para apagar o utilizador *@
    <form asp-action="Delete">
        @* Campo escondido para manter o ID do utilizador *@
        <input type="hidden" asp-for="Id" />

        @* Botão para confirmar exclusão e link para cancelar *@
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
