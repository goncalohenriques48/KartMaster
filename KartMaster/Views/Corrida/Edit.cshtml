@model KartMaster.Models.Corrida

@{
    // Define o título da página
    ViewData["Title"] = "Edit";
}

@* Título da página *@
<h1>Editar</h1>

@* Subtítulo indicando o tipo de entidade *@
<h4>Corrida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Formulário para edição de uma corrida existente *@
        <form asp-action="Edit">
            @* Mostra erros de validação de modelo, se existirem *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* Campo oculto com o ID da corrida (necessário para o update) *@
            <input type="hidden" asp-for="Id" />

            @* Campo para o nome da corrida *@
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            @* Campo para a data da corrida *@
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            @* Campo para a hora da corrida (TimeSpan) *@
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" class="form-control" />
                <span asp-validation-for="Hora" class="text-danger"></span>
            </div>

            @* Campo para a duração da corrida (TimeSpan) *@
            <div class="form-group">
                <label asp-for="Duracao" class="control-label"></label>
                <input asp-for="Duracao" class="form-control" />
                <span asp-validation-for="Duracao" class="text-danger"></span>
            </div>

            @* Campo de seleção para escolher o autódromo associado *@
            <div class="form-group">
                <label asp-for="AutodromoId" class="control-label"></label>
                <select asp-for="AutodromoId" class="form-control" asp-items="ViewBag.AutodromoId"></select>
                <span asp-validation-for="AutodromoId" class="text-danger"></span>
            </div>

            @* Botão para submeter o formulário e guardar as alterações *@
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@* Link para voltar à listagem das corridas *@
<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@* Inclusão dos scripts de validação do lado do cliente *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
