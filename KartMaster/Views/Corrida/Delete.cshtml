@model KartMaster.Models.Corrida

@{
    // Define o título da página
    ViewData["Title"] = "Delete";
}

@* Título principal *@
<h1>Apagar</h1>

@* Mensagem de confirmação *@
<h3>Tem a certeza de que deseja excluir isto?</h3>
<div>
    <h4>Corrida</h4>
    <hr />
    <dl class="row">
        @* Nome da corrida *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        @* Data da corrida *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        @* Email do autódromo associado à corrida (como representação do autódromo) *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autodromo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autodromo.Email)
        </dd>
    </dl>
    
    @* Formulário de confirmação para apagar a corrida *@
    <form asp-action="Delete">
        @* Campo oculto com o ID da corrida *@
        <input type="hidden" asp-for="Id" />
        @* Botão de submissão para apagar *@
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        @* Link para voltar à listagem de corridas *@
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
