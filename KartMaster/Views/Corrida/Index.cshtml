@model IEnumerable<KartMaster.Models.Corrida>

@{
    ViewData["Title"] = "Corridas";
    ViewData["BodyClass"] = "bg-corrida";
}

<h1>Corridas</h1>

<p>
    <a asp-action="Create">Criar Nova Corrida</a>
</p>
<table class="table-dark-custom">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Data)</th>
            <th>@Html.DisplayNameFor(model => model.Hora)</th>
            <th>@Html.DisplayNameFor(model => model.Duracao)</th>
            <th>@Html.DisplayNameFor(model => model.Autodromo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@item.Data.ToShortDateString()</td>
                <td>@item.Hora.ToString(@"hh\:mm")</td>
                <td>@item.Duracao.ToString(@"hh\:mm")</td>
                <td>@Html.DisplayFor(modelItem => item.Autodromo.Nome)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
