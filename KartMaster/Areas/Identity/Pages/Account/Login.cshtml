@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: url('/images/Login_Registo.png') no-repeat center center fixed;
        background-size: cover;
        color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 50vh;
        text-align: center;
    }

    .form-group {
        position: relative;
        margin-bottom: 1.5rem;
        width: 300px;
    }

    .form-group input {
        width: 100%;
        padding: 10px 40px;
        border: none;
        border-radius: 25px;
        background: rgba(0, 0, 0, 0.5);
        color: white;
        font-size: 1rem;
        text-align: center; /* Centraliza o texto horizontalmente */
        line-height: normal;
    }

            .form-group input::placeholder {
                color: #ccc;
            }

        .form-group i {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: white;
            font-size: 1.2rem;
        }

    .forgot-password,
    .resend-confirmation {
        font-size: 1rem; /* Aumente o tamanho da fonte */
        color: white; /* Cor vibrante para destacar */
        font-weight: bold; /* Negrito para maior visibilidade */
        margin-top: 1.5rem; /* Espaçamento adicional */
        text-shadow: 1px 1px 2px black; /* Adicione um leve contorno */
    }

        .forgot-password a,
        .resend-confirmation a {
            color: white; /* Cor vibrante para os links */
            text-decoration: underline; /* Adicione sublinhado */
        }

            .forgot-password a:hover,
            .resend-confirmation a:hover {
                color: #ffcc00; /* Mude a cor ao passar o mouse */
                text-decoration: none; /* Remova o sublinhado ao passar o mouse */
            }

    

    .button-group {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 0.5rem;
    }

        .button-group button,
        .button-group a {
            width: 120px;
            padding: 10px;
            border: none;
            border-radius: 25px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            font-size: 1rem;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
        }

    .button-group button:hover,
    .button-group a:hover {
        background: rgba(0, 0, 0, 0.9);
    }

	.login-container h1 {
		color: black;
	}

    .custom-error {
        background-color: rgba(255, 0, 0, 0.1);
        color: #ff3333;
        border: 1px solid #ff3333;
        border-radius: 10px;
        padding: 10px 15px;
        margin-bottom: 1rem;
        max-width: 400px;
        text-align: center;
    }

    .input-wrapper {
        position: relative;
        width: 100%;
    }

    .icon-left {
        position: absolute;
        top: 50%;
        left: 15px;
        transform: translateY(-50%);
        color: white;
        font-size: 1.2rem;
        z-index: 2;
    }

    .input-field {
        width: 100%;
        padding: 10px 40px 10px 45px; /* espaço à esquerda para o ícone */
        border: none;
        border-radius: 25px;
        background: rgba(0, 0, 0, 0.5);
        color: white;
        font-size: 1rem;
        text-align: left; /* importante: NÃO centraliza o texto */
        z-index: 1;
    }

    .validation-message {
        display: block;
        margin-top: 5px;
        font-size: 0.85rem;
        text-align: left;
        color: #ff6b6b;
    }
</style>

<div class="login-container">
    <h1>Login</h1>
    @{
        var generalErrors = ViewData.ModelState.TryGetValue(string.Empty, out var entry) ? entry : null;
    }

    @if (generalErrors?.Errors.Count > 0) {
        <div class="custom-error">
            @foreach (var error in generalErrors.Errors) {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
    <form id="account" method="post">
  
        
        <div class="form-group">
            <div class="input-wrapper">
                <i class="fas fa-envelope icon-left"></i>
                <input asp-for="Input.Email" placeholder="E - Mail" class="input-field" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger validation-message"></span>
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i>
            <input asp-for="Input.Password" type="password" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="forgot-password">
            <a asp-page="./ForgotPassword">Esqueceu-se da palavra-passe?</a>
        </div>
        <div class="button-group">
            <button type="submit">Login</button>
            <a asp-page="/Account/Register">Registo</a>
        </div>
        <div class="resend-confirmation">
            <a asp-page="./ResendEmailConfirmation">Reenviar confirmação de email</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
