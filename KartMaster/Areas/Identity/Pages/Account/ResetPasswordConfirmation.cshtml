@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Sucesso!!!";
}
<link rel="stylesheet" href="~/css/animations.css" />
<style>
    body {
        background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/images/fundoForgotPasswordConfirmation.jpg') no-repeat center center fixed;
    }

    .center-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    .confirmation-container {
        background-color: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(12px);
        padding: 50px 40px;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        color: #fff;
        max-width: 420px;
        text-align: center;
        position: relative;
    }

        .confirmation-container h1 {
            margin-bottom: 10px;
            font-size: 28px;
        }

        .confirmation-container p {
            font-size: 16px;
        }

        .confirmation-container a {
            color: #00bfff;
            font-weight: bold;
            text-decoration: none;
        }

            .confirmation-container a:hover {
                text-decoration: underline;
            }

    .success-icon {
        width: 70px;
        height: 70px;
        border: 3px solid #28a745;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        animation: pop 0.5s ease-out;
    }

        .success-icon i {
            font-size: 36px;
            color: #28a745;
        }

</style>

<!-- You may need to include FontAwesome in your _Layout.cshtml -->
<!-- Add this in your <head>: <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" /> -->
<div class="center-wrapper">
    <div class="confirmation-container">
        <div class="success-icon">
            <i class="fas fa-check"></i>
        </div>
        <h1>@ViewData["Title"]</h1>
        <p>A sua palavra-passe foi atualizada! <a asp-page="./Login">Volte para o login</a>.</p>
    </div>
</div>
