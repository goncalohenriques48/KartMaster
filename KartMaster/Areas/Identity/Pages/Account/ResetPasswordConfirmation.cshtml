@page
@model ResetPasswordConfirmationModel

@* Define esta página como uma Razor Page e associa-lhe o modelo ResetPasswordConfirmationModel *@
@{
    ViewData["Title"] = "Sucesso!!!";
}

<!-- Inclui um ficheiro CSS com animações personalizadas -->
<link rel="stylesheet" href="~/css/animations.css" />
<style>
    /* Aplica um fundo com uma imagem e overlay escuro para dar contraste ao conteúdo */
    body {
        background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/images/fundoForgotPasswordConfirmation.jpg') no-repeat center center fixed;
    }

    /* Centraliza vertical e horizontalmente o conteúdo principal da página */
    .center-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    /* Caixa de confirmação estilizada com transparência e sombra, estilo "frosted glass" */
    .confirmation-container {
        background-color: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(12px);
        padding: 50px 40px;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        color: #fff;
        max-width: 420px;
        text-align: center;
        position: relative;
    }

        /* Estilização do título dentro da caixa de confirmação */
        .confirmation-container h1 {
            margin-bottom: 10px;
            font-size: 28px;
        }

        /* Estilização do parágrafo de texto */
        .confirmation-container p {
            font-size: 16px;
        }

        /* Estilo dos links dentro da confirmação */
        .confirmation-container a {
            color: #00bfff;
            font-weight: bold;
            text-decoration: none;
        }

            /* Adiciona sublinhado ao link quando o utilizador passa o rato por cima */
            .confirmation-container a:hover {
                text-decoration: underline;
            }

    /* Ícone de sucesso (ícone com contorno verde e check) */
    .success-icon {
        width: 70px;
        height: 70px;
        border: 3px solid #28a745;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        animation: pop 0.5s ease-out; /* Animação definida em animations.css */
    }

        .success-icon i {
            font-size: 36px;
            color: #28a745; /* Cor verde para representar sucesso */
        }

</style>

<!--
    NOTA: O ícone de sucesso usa FontAwesome.
    Certifica-te de que tens o seguinte no <head> do _Layout.cshtml:
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
-->
<!-- Estrutura principal da página -->
<div class="center-wrapper">
    <div class="confirmation-container">
        <!-- Ícone visual de sucesso (círculo com check) -->
        <div class="success-icon">
            <i class="fas fa-check"></i>
        </div>
        <!-- Título da página, dinâmico via ViewData -->
        <h1>@ViewData["Title"]</h1>
        <!-- Mensagem de sucesso e link que permite voltar à janela de login -->
        <p>A sua palavra-passe foi atualizada! <a href="#" onclick="fecharEstaEAbrirPai()">Volte para o login</a>.</p>
    </div>
</div>

<script>
    // Função JS que:
    // 1. Dá foco à aba que abriu esta página (login)
    // 2. Fecha a aba atual
    function fecharEstaEAbrirPai() {
        if (window.opener && !window.opener.closed) {
            window.opener.focus(); // volta ao separador que abriu este
        }
        window.close(); // fecha esta aba
    }
</script>
