@page
@model RegisterModel

@{
    ViewData["Title"] = "Registo";
}

<style>
    body {
        background: url('/images/Login_Registo.png') no-repeat center center fixed;
        background-size: cover;
        color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .register-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 50vh;
        text-align: center;
    }

    .form-group {
        position: relative;
        margin-bottom: 1.5rem;
        width: 300px;
    }

    .form-group input {
        width: 100%;
        padding: 10px 40px;
        border: none;
        border-radius: 25px;
        background: rgba(0, 0, 0, 0.5);
        color: white;
        font-size: 1rem;
        text-align: center;
    }

    .form-group input::placeholder {
        color: #ccc;
    }

    .form-group i {
        position: absolute;
        top: 50%;
        left: 15px;
        transform: translateY(-50%);
        color: white;
        font-size: 1.2rem;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .button-group button,
    .button-group a {
        width: 120px;
        padding: 10px;
        border: none;
        border-radius: 25px;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        font-size: 1rem;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
    }

    .button-group button:hover,
    .button-group a:hover {
        background: rgba(0, 0, 0, 0.9);
    }

	.register-container h1 {
		color: black;
	}
</style>

<div class="register-container">
    <h1>Registo</h1>
    <form method="post">
        <div class="form-group">
           <i class="fas fa-user"></i>
            <input asp-for="Input.UserName" placeholder="Nome de utilizador" class="form-control" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>

        </div>
        <div class="form-group">
            <i class="fas fa-user"></i>
            <input asp-for="Input.Email" placeholder="E - Mail" type="email" required />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i>
            <input asp-for="Input.Password" type="password" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i>
            <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirmar Password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="button-group">
            <a asp-page="/Account/Login">Login</a>
            <button type="submit">Registar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

