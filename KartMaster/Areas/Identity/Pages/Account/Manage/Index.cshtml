@* 
    Página do perfil do utilizador.
    Permite visualizar e editar o nome e email do perfil.
    A secção de alteração de password está comentada, mas preparada para uso futuro.
*@
@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil"; // Título apresentado no topo da página
    ViewData["ActivePage"] = ManageNavPages.Index; // Define qual tab está ativa na navegação lateral
}
<style>

    /* Estilo geral da página */
    body {
        background-color: #121212;
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow: hidden;
    }

    /* Cartão de perfil */
    .profile-card {
        background-color: #1e1e1e;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease-in-out;
    }

        .profile-card:hover {
            box-shadow: 0 0 35px rgba(0, 0, 0, 0.6);
        }

    .profile-title {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 2rem;
        color: #fff; 
    }

    /* Labels e inputs */
    .form-label {
        display: block;
        margin-bottom: 0.25rem;
        font-weight: 500;
        color: #ddd; 
    }

    .form-control {
        background-color: transparent;
        border: 1px solid #444;
        color: #eee;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

        .form-control::placeholder {
            color: #888;
            opacity: 1;
        }

        .form-control:focus {
            background-color: transparent;
            border-color: #6c757d;
            outline: none;
            color: #fff;
            box-shadow: none;
        }

    /* Botão para guardar alterações */
    #update-profile-button {
        background-color: aquamarine;
        border: none;
        padding: 0.6rem 2rem;
        color: black;
        cursor: pointer;
        font-weight: 600;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        width: 100%;
        font-size: 1.1rem;
    }

    #update-profile-button:hover {
            box-shadow: 0 6px 20px rgba(60, 179, 113);
        }

    /* Estilo para mensagens de erro */
    .text-danger {
        color: #ff6b6b;
        font-size: 0.9rem;
        margin-top: 0.25rem;
        display: block;
    }

</style>

<!-- Cabeçalho da página -->
<h3>@ViewData["Title"]</h3>
<!-- Mensagem de status (sucesso ou erro) -->
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <!-- Formulário de edição de perfil -->
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Campo Nome -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Nome" class="form-control" placeholder="" />
                <label asp-for="Input.Nome" class="form-label"></label>
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>

            <!-- Campo Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Scripts de validação -->
    <partial name="_ValidationScriptsPartial" />
}
