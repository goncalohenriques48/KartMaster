@page
@model EmailModel
@{
    ViewData["Title"] = "Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}
<style>
    .form-control {
        background-color: transparent;
        border: 1px solid #444;
        color: #eee;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

        .form-control::placeholder {
            color: #888;
            opacity: 1;
        }

        .form-control:focus {
            background-color: transparent;
            border-color: #6c757d;
            outline: none;
            color: #fff;
            box-shadow: none;
        }

    #change-email-button {
        background-color: aquamarine;
        border: none;
        padding: 0.6rem 2rem;
        color: black;
        cursor: pointer;
        font-weight: 600;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        width: 100%;
        font-size: 1.1rem;
    }

    #change-email-button:hover {
            box-shadow: 0 6px 20px rgba(60, 179, 113);
        }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.9rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating mb-3 input-group">
                    <input asp-for="Email" class="form-control"/>
                        <div class="input-group-append">
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    <label asp-for="Email" class="form-label"></label>
                </div>
            }
            else
            {
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control"/>
                    <label asp-for="Email" class="form-label"></label>
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                </div>
            }
            <div class="form-floating mb-3">
                <input asp-for="Input.NewEmail" name="dummy-email" class="form-control" autocomplete="new-email" aria-required="true"/>
                <label asp-for="Input.NewEmail" class="form-label">Insira o seu novo email</label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary">Atualizar Email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
