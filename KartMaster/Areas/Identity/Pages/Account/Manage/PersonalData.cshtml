@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Conta";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<style>
    #delete {
        background-color: aquamarine;
        border: none;
        padding: 0.6rem 2rem;
        color: black;
        cursor: pointer;
        font-weight: 600;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        width: 100%;
        font-size: 1.1rem;
    }

        #delete:hover {
            box-shadow: 0 6px 20px red;
        }

</style>

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Queres eliminar a tua conta?</p>
        <p>
            <strong>Irá remover a sua conta permanentemente, este processo não poderá ser revertido</strong>
        </p>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
