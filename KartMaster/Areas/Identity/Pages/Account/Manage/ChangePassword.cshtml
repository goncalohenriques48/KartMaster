@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Mudar palavra-passe";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<style>
    .form-control {
        background-color: transparent;
        border: 1px solid #444;
        color: #eee;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        font-size: 1rem;
        width: 100%;
        box-sizing: border-box;
        transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    }

        .form-control::placeholder {
            color: #888;
            opacity: 1;
        }

        .form-control:focus {
            background-color: transparent;
            border-color: #6c757d;
            outline: none;
            color: #fff;
            box-shadow: none;
        }

    #change-password-button {
        background-color: aquamarine;
        border: none;
        padding: 0.6rem 2rem;
        color: black;
        cursor: pointer;
        font-weight: 600;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        width: 100%;
        font-size: 1.1rem;
    }

    #change-password-button:hover {
            box-shadow: 0 6px 20px rgba(60, 179, 113);
        }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.9rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword" class="form-label">Insira a sua palavra-passe</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.NewPassword" class="form-label">Insira a sua nova palavra-passe</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Por favor confirme a sua nova palavra-passe" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" id="change-password-button">Atualizar palavra-passe</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
