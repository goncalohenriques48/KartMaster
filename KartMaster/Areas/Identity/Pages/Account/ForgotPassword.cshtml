@* 
    Página: ForgotPassword.cshtml
    Objetivo: Permite ao utilizador solicitar a recuperação da palavra-passe através do envio de um email.
    Notas:
    - Solicita apenas o email do utilizador.
    - Integra validação e mostra mensagens de erro.
    - Utiliza design com fundo escurecido e efeito de vidro (blur).
*@
@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu-se da sua palavra-passe?"; // Título dinâmico da página
}

<style>
    /* Fundo com imagem e camada escura para destaque */
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/fundoForgotPassword.jpg') no-repeat center center fixed;
    }

    /* Centraliza o formulário vertical e horizontalmente */
    .center-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    /* Caixa do formulário com efeito "frosted glass" */
    .forgot-container {
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 40px;
        align-items: center;
        justify-content: center;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        width: 100%;
        max-width: 400px;
        color: #fff;
        text-align: center;
    }

    /* Estilo do campo de email */
    .form-control {
        background-color: rgba(255, 255, 255, 0.9);
        border: none;
        color: #000;
    }

    /* Estilo do label do input */
    .form-label {
        color: #f1f1f1;
    }

    /* Botão principal */
    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: bold;
    }

    /* Mensagens de erro */
    .text-danger {
        color: #ff6b6b !important;
    }
</style>

<div class="center-wrapper">
    <div class="forgot-container">
        <!-- Título da página -->
        <h1>@ViewData["Title"]</h1>
        <!-- Subtítulo com instrução -->
        <h2>Digite o seu email</h2>

        <!-- Formulário para solicitar redefinição de palavra-passe -->
        <form method="post">
            <!-- Mensagem de erro geral se o modelo for inválido -->
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Campo: Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Botão para submeter o formulário -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">Atualizar palavra-passe</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
