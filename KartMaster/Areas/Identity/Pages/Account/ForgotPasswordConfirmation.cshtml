@* 
    Página: ForgotPasswordConfirmation.cshtml
    Objetivo: Informa o utilizador que foi enviado um email com instruções para redefinir a palavra-passe.
    Notas:
    - Design centrado com fundo estilizado.
    - Simples e direto, sem interações.
*@
@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Esqueceu-se da palavra-passe ? "; // Título da página
}

<style>
    /* Fundo com imagem e overlay escuro */
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/fundoForgotPasswordConfirmation.jpg') no-repeat center center fixed;
    }

    /* Wrapper centralizado vertical e horizontalmente */
    .center-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    /* Caixa de confirmação com efeito "frosted glass" */
    .confirmation-container {
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        width: 100%;
        max-width: 400px;
        color: #fff;
        text-align: center;
    }

    /* Título da mensagem */
    h1 {
        margin-bottom: 20px;
    }

    /* Texto (não usado neste caso, mas preparado) */
    p {
        font-size: 1.1rem;
    }
</style>
<!-- Container central com a mensagem de instrução -->
<div class="center-wrapper">
    <div class="confirmation-container">
        <h1>Por favor, aceda ao seu email para atualizar a sua palavra-passe.</h1>
    </div>
</div>
