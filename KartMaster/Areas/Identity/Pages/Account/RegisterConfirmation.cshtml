@* 
    Página: RegisterConfirmation.cshtml
    Objetivo: Exibe uma mensagem ao utilizador após o registo, indicando que deve confirmar o email.
    Notas:
    - Usa um fundo estilizado com imagem.
    - Mostra link manual de confirmação se necessário.
    - Está integrada com o layout principal da aplicação.
*@
@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de Registo"; // Define o título da página dinamicamente
    Layout = "~/Views/Shared/_Layout.cshtml"; // Usa o layout principal da aplicação
}

<style>
    /* Container principal centralizado, com fundo e estilo "glass effect" */
    .confirmation-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 80vh;
        text-align: center;
        color: white;
        background: linear-gradient(to bottom, rgba(26, 26, 26, 0.8), rgba(51, 51, 51, 0.8)), url('/images/fundoRegistoEmail.jpg') no-repeat center center;
        background-size: cover;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

        /* Título estilizado em azul claro */
        .confirmation-container h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #4da6ff;
        }

        /* Texto da mensagem */
        .confirmation-container p {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        /* Estilo do link de confirmação */
        .confirmation-container a {
            color: #4da6ff;
            text-decoration: none;
            font-weight: bold;
        }

            .confirmation-container a:hover {
                text-decoration: underline;
            }
</style>

<!-- Bloco principal da mensagem de confirmação -->
<div class="confirmation-container">
    <!-- Título (vindo do ViewData["Title"]) -->
    <h1>@ViewData["Title"]</h1>
    <!-- Mensagem de agradecimento e instrução -->
    <p>Obrigado por ter feito o seu registo. Verifique agora o seu e-mail para confirmar a sua conta!</p>
    @if (Model.DisplayConfirmAccountLink) {
        <p>
            Caso não tenha recebido o email, clique no link abaixo para confirmar sua conta:
            <br />
            <a href="@Model.EmailConfirmationUrl">Confirmar Conta</a>
        </p>
    }
</div>
