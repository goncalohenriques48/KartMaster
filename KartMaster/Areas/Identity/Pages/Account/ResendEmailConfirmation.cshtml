@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar e-mail de confirmação";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/ResendEmailConfirmation.jpg') no-repeat center center fixed;
        background-size: cover;
        align-items: center;
        justify-content: center;
    }

    .resend-container {
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        width: 100%;
        max-width: 400px;
        color: #fff;
    }

        .resend-container h1,
        .resend-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-control {
        background-color: rgba(255, 255, 255, 0.9);
        border: none;
    }

    .form-label {
        color: #f1f1f1;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: bold;
    }

    .text-danger {
        color: #ff6b6b !important;
    }
</style>

<div class="resend-container">
    <h1>@ViewData["Title"]</h1>
    <h2>Digite o seu e-mail</h2>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="w-100 btn btn-lg btn-primary">Reenviar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
