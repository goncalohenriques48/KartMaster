@* 
    Página: ResendEmailConfirmation.cshtml
    Objetivo: Permite ao utilizador pedir novamente o envio do e-mail de confirmação da conta.
    Notas:
    - Utiliza um fundo com imagem e efeito de vidro esbatido (frosted glass).
    - Recolhe o email do utilizador através de um formulário com validação integrada.
*@
@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar e-mail de confirmação"; // Título dinâmico da página
}

<style>
    /* Fundo com imagem e camada escura para destaque do conteúdo */
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/images/ResendEmailConfirmation.jpg') no-repeat center center fixed;
    }

    /* Wrapper para centralizar o conteúdo vertical e horizontalmente */
    .center-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    /* Container principal com efeito "frosted glass" e sombra */
    .resend-container {
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
        width: 100%;
        max-width: 400px;
        color: #fff;
    }

        /* Títulos centrados */
        .resend-container h1,
        .resend-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    /* Input com fundo branco opaco para legibilidade */
    .form-control {
        background-color: rgba(255, 255, 255, 0.9);
        border: none;
    }

    /* Label dos inputs com cor clara */
    .form-label {
        color: #f1f1f1;
    }

    /* Botão de envio estilizado */
    .btn-primary {
        background-color: #007bff;
        border: none;
        font-weight: bold;
    }

    /* Estilo para mensagens de erro de validação */
    .text-danger {
        color: #ff6b6b !important;
    }
</style>
<div class="center-wrapper">
    <div class="resend-container">
        <!-- Título principal da página -->
        <h1>@ViewData["Title"]</h1>
        <!-- Subtítulo explicativo -->
        <h2>Digite o seu e-mail</h2>

        <!-- Formulário POST para reenviar o e-mail de confirmação -->
        <form method="post">
            <!-- Mostra todos os erros de validação -->
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <!-- Campo para introdução do e-mail -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Botão de submissão -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reenviar</button>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Importa scripts de validação do lado do cliente -->
    <partial name="_ValidationScriptsPartial" />
}
